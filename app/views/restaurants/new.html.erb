<h1>Add new restaurant</h1>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit "Save new restaurant", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to list of all restaurants", restaurants_path(@restaurants) %>
